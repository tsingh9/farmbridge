@model Crops
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete Crop</h1>
    <h3 class="text-center text-secondary">Are you sure you want to delete this crop?</h3>
    <div class="bg-light p-4 shadow rounded mt-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Season)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Season)</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Quantity)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-9">
                <span class="badge
                    @(Model.Status.ToLower() == "approved" ? "bg-success" :
                      Model.Status.ToLower() == "rejected" ? "bg-danger" :
                      "bg-warning")">
                    @Html.DisplayFor(model => model.Status)
                </span>
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-9">₹@Html.DisplayFor(model => model.Price)</dd>

            @if (Model.Image != null)
            {
                <dt class="col-sm-3 fw-bold text-primary">Image</dt>
                <dd class="col-sm-9">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)"
                         alt="Crop Image" class="img-thumbnail" style="max-width: 200px;" />
                </dd>
            }
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="CropID" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>
