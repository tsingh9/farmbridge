@model IEnumerable<FarmBridge.Models.Buyer>

@{
    ViewData["Title"] = "Buyers List";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Buyers List</h1>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.BuyerId)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNo)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var buyer in Model)
            {
                <tr>
                    <td>@buyer.BuyerId</td>
                    <td>@buyer.Name</td>
                    <td>@buyer.Email</td>
                    <td>@buyer.PhoneNo</td>
                    <td>@buyer.Address</td>
                    <td>@buyer.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@buyer.Role</td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@buyer.BuyerId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@buyer.BuyerId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
