@model Farmer

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Delete Farmer</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-light p-4 shadow rounded">
                <h3 class="text-center mb-3">Are you sure you want to delete this farmer?</h3>
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FullName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.ContactNo)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactNo)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.AdharCardNo)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AdharCardNo)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.EmailAddress)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailAddress)</dd>
                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="FarmerID" />
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
