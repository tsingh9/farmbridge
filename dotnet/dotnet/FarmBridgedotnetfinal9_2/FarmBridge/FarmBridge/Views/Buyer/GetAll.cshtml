@model IEnumerable<FarmBridge.Models.Crops>

@{
    ViewData["Title"] = "GetAll";
}

<h1 style="color:deeppink;text-align:center;margin-top:3rem;">Available Crops</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4" style="margin-top:3rem;">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                </div>
                <div class="card-body">
                    <p><strong>Season:</strong> @Html.DisplayFor(modelItem => item.Season)</p>
                    <p><strong>Quantity:</strong> @Html.DisplayFor(modelItem => item.Quantity)</p>
                    <p><strong>Price:</strong> @Html.DisplayFor(modelItem => item.Price)</p>
                </div>
                <div class="card-footer text-center">
    <form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="cropId" value="@item.CropID" />  <!-- Fix: Change "id" to "cropId" -->
    <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />
    <button type="submit" class="btn btn-sm btn-warning">Add To Cart</button>
  </form>
<div class="mt-2 text-center">
    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary btn-sm">View Cart</a>
</div>


                </div>
            </div>
        </div>
    }
</div>
